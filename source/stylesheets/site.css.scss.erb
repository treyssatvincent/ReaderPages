$vars: (
    font-family: sans-serif,
    font-size:18px,
    line-height: 30px,

    primary: #eee,

    secondary: #9cf,

    background: #333,
    background-light: #444,

    width: 1200px

);

:root {
    --font-family: map-get($vars, font-family);
    --font-size: map-get($vars, font-size);
    --line-height: map-get($vars, line-height);
    --primary: map-get($vars, primary);
    --secondary: map-get($vars, secondary);
    --background: map-get($vars, background);
    --background-light: map-get($vars, background-light);
    --width: map-get($vars, width);
}

@mixin var($property, $varName) {
#{$property}: map-get($vars, $varName);
#{$property}: var(--#{$varName}, map-get($vars, $varName));
}

// Global style :
body {
    margin: 0;
    position: absolute;
    @include var(background-color, background);
    @include var(font-family, font-family);
    @include var(color, primary);
    @include var(font-size, font-size);
    text-rendering: optimizelegibility;
    @include var(line-height, line-height);
    width: 100%;
}

a {
    @include var(color, secondary);
}
a:hover {
    @include var(color, primary);
}

header {
    width: 100%;
    nav {
        display: flex;
        justify-content: space-around;
        height: auto;
        flex-wrap: wrap;
        a {
            text-decoration: none;
            @include var(color, primary);
            margin: 5px 5%;
            font-size: 1.3em;
            text-transform: uppercase;
            text-align: center;
            p, h1 {
                margin: 0;
                font-size: inherit;
            }
        }
        .site-title {
            font-weight: bold;
            width: 100%;
        }
    }
    input, label {
        display: none;
    }
}

section {
    @include var(max-width, width);
    margin: 30px auto 60px auto;
    padding: 0 20px;
    h2, time {
        text-transform: uppercase;
        margin: 0;
    }
}
h1 {
    text-align: center;
    text-transform: uppercase;
    font-size: 1.5em;
    margin-bottom: 0;
}
article {
    margin: auto;
    @include var(max-width, width);
    line-height: 1.5em;
    font-size: 1.1em;
    time {
        text-align: center;
        text-transform: uppercase;
        display: block;
    }
    h1 {
        font-size: 1.5em;
        margin-bottom: 0;
    }
    h2 {
        font-size: 1.2em;
        padding: 0 5px;
    }
    h3, h4, h5 {
        font-size: 1em;
        padding: 0 5px;
    }
    img {
        max-width: 100%;
    }
    p {
        padding: 0 10px;
    }
    .footnotes {
        border-top: solid 1px;
    }
}

