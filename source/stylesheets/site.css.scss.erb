body {
    margin: 0;
    background-color: #333;
    font-family: sans-serif;
    color: #eee;
    font-size: 18px;
    text-rendering: optimizelegibility;
    line-height: 30px;
    width: 100%;
}

a {
    text-decoration: none;
    color: inherit;
    border-bottom: 1px solid #9cf
}
a:hover {
    background-color: #9cf;
    color: #000;
}

header {
    text-transform: uppercase;
    text-align: center;
    margin-bottom: 40px;
    .site-title {
        font-weight: bold;
        margin: 21px 0;
    }
    nav {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }
}

section {
    max-width: 1200px;
    margin: 30px auto 60px auto;
    padding: 0 20px;
    h2, time {
        text-transform: uppercase;
        margin: 0;
    }
}
article {
    max-width: 1200px;
    margin: auto;
    line-height: 1.5em;
    padding: 0 10px;
    time {
        text-align: center;
        text-transform: uppercase;
        display: block;
    }
    h1 {
        text-align: center;
        text-transform: uppercase;
        font-size: 1.5em;
    }
    img {
        max-width: 100%;
    }
    .footnotes {
        border-top: solid 1px;
    }
}

<%= Rouge::Themes::ThankfulEyes.render(:scope => '.highlight') %>

.highlight {
    background-color: inherit;
    padding-left: 15px;
}
